{
  "name": "pentagon",
  "version": "1.0.0",
  "description": "Pentagon is a cutting-edge and versatile Content Management System (CMS) designed to empower individuals, businesses, and organizations of all sizes. With its user-friendly interface and powerful features, Pentagon makes managing your digital content a breeze.",
  "main": "index.js",
  "scripts": {
    "test": "concurrently \"npm run server:test\"",
    "server:test": "jest --coverage",
    "start:installation": "npm i && npm run server:installation",
    "start:dev": "concurrently \"npm run server:dev\"",
    "server:installation": "npm run start:installation --prefix pentagon-server",
    "server:dev": "npm run start:dev --prefix pentagon-server",
    "client:installation": "npm run start:installation --prefix pentagon-client",
    "client:dev": "npm run start:dev --prefix pentagon-client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "pentagon-server/src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 95
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "husky pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run test -- --bail --findRelatedTests",
      "git add"
    ]
  }
}
